{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": ["lua-types/5.4"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "outDir": "./resources/lua"
  },
  "include": ["ts/**/*"],
  "tstl": {
    "buildMode": "default",
    "luaTarget": "5.4",
    "sourceMapTraceback": true,
    "luaLibImport": "require",
  }
}